<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/background"
                                                   tools:context=".fragment.ResultFragment">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:textSize="38sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="94dp"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.497"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/quitter"
              android:textColor="@color/black"
              android:fontFamily="sans-serif-light"
              android:textSize="24sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:id="@+id/textView2"
              android:layout_marginTop="212dp" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView android:id="@+id/btn_home"
               android:layout_width="110sp"
               android:layout_height="110sp"
               android:src="@drawable/home"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.538" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="0.634"/>

</androidx.constraintlayout.widget.ConstraintLayout>